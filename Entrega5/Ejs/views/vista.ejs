<header>
    <%- include('./partials/encabezado.ejs') %>
</header>

<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h2 style="color: rgb(118, 7, 14)">Productos ingresados</h2>
            <br />

            <% if(productos.length> 0) { %>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <tr style="color: yellow;">
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Edad</th>
                        </tr>
                        <% for (const prods in productos) { %>
                            <tr>
                                <td>
                                    <%= productos[prods].title %>
                                </td>
                                <td>
                                    <%= productos[prods].price %>
                                </td>
                                <td>
                                    <img src="<%= productos[prods].thumbnail %>" width="80" height="80" />
                                </td>                                
                            </tr>
                            <% } %>
                    </table>
                </div>
                <% } else{ %>
                    <h3 style="color: black">No existen datos</h3>
                    <% }%>
                        <form action="/" method="GET">
                            <button class="btn btn-success mt-3">Cargar producto nuevo</button>
                        </form>
</body>